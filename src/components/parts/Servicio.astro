---
interface Props {
  href: string;
  name: string;
  description: string;
  iconClass: string;
}

const { href, name, description, iconClass } = Astro.props;
const icon = `text-2xl me-4 bi ${iconClass}`
---

<a href={ href } class="flex items-start w-full hover:text-yellow-500 transition sm:w-1/2 md:w-1/3 lg:w-1/4 flex-none mt-6 px-3">
  <i class={ icon } />
  <div>
    <h3 class="font-bold text-2xl mb-2">{name}</h3>
    <p class="text-slate-700">{description}</p>
  </div>
</a>
